<%= render partial: "shared/report_head" %>

<div class="mt-1">
  <p class="text-center m-0"> Censo Votantes</p>
</div>

<%= render partial: "shared/user_header_data" %>

<div class="">
  <h3 class="text-center">Total Jefes de Hogar: <%= @heads.size%></h3>
</div>
<div class="rounded-5 container text-bg-light p-3">

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Cedula</th>
      <th scope="col">Nombre</th>
      <th scope="col">Fecha de Nacimiento</th>
      <th scope="col">Edad</th>
      <th scope="col">Teléfono</th>
    </tr>
  </thead>
  <tbody>
    <% @heads.each do |head| %>
      <tr>
        <td><%= head.cedula %></td>
        <td><%= head.name %> <%= head.sur_name %></td>
        <td><%= head.head_birthdate %></td>
        <td><%= head.age %></td>
        <td><%= head.phone_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<div class="p-4">
  <h3 class="text-center">Total Integrantes de Hogar Votantes: <%= @members.size%></h3>
</div>

<div class="rounded-5 container text-bg-light p-3">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Cedula</th>
        <th scope="col">Nombre</th>
        <th scope="col">Fecha de Nacimiento</th>
        <th scope="col">Edad</th>
        <th scope="col">Teléfono</th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.cedula %></td>
          <td><%= member.name %> <%= member.sur_name %></td>
          <td><%= member.member_birthdate %></td>
          <td><%= member.age %></td>
          <td><%= member.phone_number %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
